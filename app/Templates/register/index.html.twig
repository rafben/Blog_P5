{% extends 'layout.html.twig' %}

{% block content %}

	<div
		class="container">

		<!--section CONTACT et INSCRIPTION-->
		<section class="contact_inscription" id="contact=contact">

			<div class="jumbotron">
				<h2 class="display-4">INSCRIPTION</h2>
				<hr
				class="my-4">
				<!--Section: Contact v.1-->

				<section class="section pb-5">
					<div
						class="row">

						<!--Grid column-->
						<div class="col-lg-12">
							<form
								method="POST" action="{{ URL }}/register/register">
								<!--Form with header-->
								<div class="card">

									<div
										class="card-body">
										<!--Header-->
										<div class="form-header blue accent-1">
											<h3>
												<i class="fas fa-envelope"></i>
												Pour vous inscrire :</h3>
										</div>

										<h5>Inscrivez-vous en complétant le formulaire ci-dessous :</h5>
										<br>

										<!--Body-->
										<div class="md-form">
											<i class="fas fa-user prefix grey-text"></i>
											<label for="form-name">Nom</label>
											<input type="text" name="nom" id="form-name" class="form-control">
										</div><br>

										<div class="md-form">
											<i class="fas fa-user prefix grey-text"></i>
											<label for="form-name">Prénom</label>
											<input type="text" name="prenom" id="form-name" class="form-control">
										</div><br>

										<div class="md-form">
											<i class="fas fa-envelope prefix grey-text"></i>
											<label for="form-email">
												email</label>
											<input type="email" name="email" id="form-email" class="form-control">
										</div><br>

										<div class="md-form">
											<i class="fas fa-tag prefix grey-text"></i>
											<label for="form-Subject">Mot de passe</label>
											<input name="password" type="password" class="form-control" id="password" title="6 caracteres minimum" required data-validation-required-message="Veuillez renseigner ce champ." pattern=".{6,}" data-validation-pattern-message="6 caractères minimum.">
										</div><br>

										<div class="md-form">
											<i class="fas fa-pencil-alt prefix grey-text"></i>
											<label for="form-text">Confirmation du mot de passe
											</label>
											<input name="passwordconfirm" type="password" class="form-control" id="password" title="6 caracteres minimum" required data-validation-required-message="Veuillez renseigner ce champ." pattern=".{6,}" data-validation-pattern-message="6 caractères minimum.">
										</div><br>
										<br><br>
										<div class="text-center text-md-center">
											<button class="btn btn-primary" type="submit">Envoyer</button>
										</div>
										<div class="status"></div>

									</div>

								</div>
							</form>
							<!--Form with header-->

						</div>
						<!--Grid column-->

						<!--Grid column-->
						<div class="col-lg-6"></section>
						<!--Section: Contact v.1-->
						<hr class="my-4">

					</div>

				</section>

				<!--fin de section reservation-->

				<!--fin de section contact-->

			</div>
		</div>
	{% endblock %}
