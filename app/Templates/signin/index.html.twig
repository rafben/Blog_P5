{% extends 'layout.html.twig' %}

{% block content %}

	<div class="container">
		<!-- Page Header -->


		<div class="row">
			<div class="col-lg-8 col-md-10 mx-auto">
				<div class="site-heading">
					<hr class="my-4">
					<h1>Connexion</h1>
					<span class="subheading">Veuillez vous authentifier avec vos identifiants de connexion</span>
					<hr class="my-4">
				</div>
			</div>
		</div>


		<!-- Main Content -->

		<div class="row">
			<div class="col-lg-8 col-md-10 mx-auto">
				<p class="help-block text-danger">{{ msg }}</p>


				<form method="post" action="{{ URL }}/signin/connect" id="contactForm" novalidate>
					<div class="control-group">
						<div class="form-group floating-label-form-group controls">
							<label for="username">Nom d'utilisateur</label>
							<input name="email" type="text" class="form-control" placeholder="Nom d'utilisateur" id="username" required data-validation-required-message="Veuillez renseigner ce champ.">
							<p class="help-block text-danger"></p>
						</div>
					</div>

					<div class="control-group">
						<div class="form-group floating-label-form-group controls">
							<label for="password">Mot de passe</label>
							<input name="pwd" type="password" class="form-control" placeholder="Mot de passe" id="password" required data-validation-required-message="Veuillez renseigner ce champ.">
							<p class="help-block text-danger"></p>
						</div>
					</div>
					<br>

					<div id="success"></div>
					<div class="form-group">
						<button type="submit" name="submitted" class="btn btn-primary" value="submitted">Connexion</button>
					</div>
				</form>
			</div>
		</div>

		<div class="row">
			<hr class="my-4">
			<div class="col-8 mx-auto">
				<a href="{{ URL }}/register"> Si vous n'avez pas de compte, merci de vous inscrire</a>
			</div>
			<hr class="my-4">
		</div>

		<br>
		<br>
		<br>
		<br>
		<br>
	</div>


{% endblock %}
